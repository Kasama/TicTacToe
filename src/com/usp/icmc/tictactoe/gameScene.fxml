<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
      prefHeight="400.0" prefWidth="600.0" stylesheets="@../../../../res/gameStyle.css"
      xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.usp.icmc.tictactoe.GameController">
    <Label text="Tic Tac Toe">
        <font>
          <Font size="61.0"/>
        </font>
    </Label>
    <Separator prefWidth="200.0">
        <VBox.margin>
          <Insets left="5.0" right="5.0"/>
        </VBox.margin>
    </Separator>
    <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
        <VBox.margin>
            <Insets/>
        </VBox.margin>
        <GridPane fx:id="gridPane" HBox.hgrow="ALWAYS">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <HBox.margin>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
            </HBox.margin>
        </GridPane>
        <Separator orientation="VERTICAL">
            <HBox.margin>
                <Insets bottom="5.0" top="5.0"/>
            </HBox.margin>
        </Separator>
        <VBox prefHeight="200.0" prefWidth="100.0" HBox.hgrow="ALWAYS">
            <HBox.margin>
                <Insets left="5.0"/>
            </HBox.margin>
            <TextArea fx:id="chatField" editable="false" focusTraversable="false" onMouseMoved="#focusSendText"
                      onMousePressed="#focusSendText" onMouseReleased="#focusSendText" VBox.vgrow="ALWAYS">
                <VBox.margin>
                    <Insets right="5.0" top="5.0"/>
                </VBox.margin>
            </TextArea>
            <TextField fx:id="chatInput" onAction="#handleEnter">
                <VBox.margin>
                    <Insets bottom="5.0" right="5.0" top="5.0"/>
                </VBox.margin>
            </TextField>
        </VBox>
    </HBox>
</VBox>
